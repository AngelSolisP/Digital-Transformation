<Window x:Class="PrivacyMeter.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Privacy Meter — Desktop MVP" Height="620" Width="980">
  <DockPanel>
    <Border DockPanel.Dock="Top" Padding="10" Background="#0F172A">
      <StackPanel Orientation="Horizontal">
        <TextBlock Text="Privacy Meter — Desktop MVP" Foreground="White" FontSize="18" FontWeight="Bold"/>
        <Button Content="Start" Width="90" Margin="16,0,0,0" Click="Start_Click"/>
        <Button Content="Stop" Width="90" Margin="8,0,0,0" Click="Stop_Click"/>
        <TextBlock Text="  (Tip: abre VS Code como Administrador si no ves eventos)" Foreground="#CBD5E1" Margin="12,0,0,0"/>
      </StackPanel>
    </Border>

    <DataGrid x:Name="Grid" AutoGenerateColumns="False" Margin="8" IsReadOnly="True">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="150"/>
        <DataGridTextColumn Header="Process" Binding="{Binding Process}" Width="*" />
        <DataGridTextColumn Header="PID" Binding="{Binding Pid}" Width="80"/>
        <DataGridTextColumn Header="Domain" Binding="{Binding Domain}" Width="2*"/>
        <DataGridTemplateColumn Header="Color" Width="100">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <Border Width="70" Height="26" CornerRadius="6"
                      Background="{Binding Color, Converter={StaticResource RiskToBrush}}">
                <TextBlock Text="{Binding Color}" Foreground="White"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontWeight="SemiBold"/>
              </Border>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTextColumn Header="Note" Binding="{Binding Note}" Width="*"/>
      </DataGrid.Columns>
    </DataGrid>
  </DockPanel>
</Window>
